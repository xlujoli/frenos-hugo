# Variables de entorno para desarrollo local
NODE_ENV=development

# Base de datos PostgreSQL - Cambia esta URL por tu base de datos
# Ejemplo para Neon Database:
DATABASE_URL=postgresql://username:password@host:5432/database_name

# Para desarrollo local con PostgreSQL instalado:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/frenos_hugo

# Puerto del servidor (Render lo asignará automáticamente)
PORT=3000

# Configuración adicional
LOG_LEVEL=info
